{
  "name": "wye-frontend",
  "description": "Wye - A recommendation tool for multiplayer games based on players' Steam libraries",
  "repository": "https://github.com/n-bryant/wye.git",
  "version": "0.1.0",
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn lint && react-scripts build",
    "test": "NODE_ENV=test jest --watch --verbose false",
    "eject": "react-scripts eject",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:sort-package-json",
    "lint:eslint": "eslint . --cache --ext .js,.jsx --fix",
    "lint:prettier": "prettier '**/*.{css,scss,sass,less,json,yml,yaml,html,md,mdx,vue,ts,tsx,gql,graphql}' --write",
    "lint:sort-package-json": "sort-package-json",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "Nicholas Bryant",
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatters": [
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.6.0",
    "@mdi/js": "^4.5.95",
    "@mdi/react": "^1.2.1",
    "@n_bryant/classnames-helper": "^1.1.0",
    "@n_bryant/nb-material-theme": "^1.0.0",
    "apollo-cache-inmemory": "^1.6.3",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "prop-types": "^15.7.2",
    "react": "16.11.0",
    "react-apollo": "^3.1.3",
    "react-dom": "16.11.0",
    "react-jss": "^10.0.0"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.1",
    "lint-staged": "^9.4.2",
    "lodash": "^4.17.15",
    "prettier": "^1.19.1",
    "react-scripts": "3.2.0",
    "sort-package-json": "^1.23.1",
    "waait": "^1.0.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
